{
    "name": "Codeowners",
    "description": "Easier codeowners code reviews",
    "version": "1.0.6",
    "manifest_version": 2,
    "background": {
        "scripts": ["src/background.js"]
    },
    "browser_action": {
        "default_popup": "src/popup/popup.html"
    },
    "web_accessible_resources": ["popup/popup.html", "src/injectButton.js"],
    "icons": {
        "16": "src/icons/tie_16.png",
        "48": "src/icons/tie_48.png",
        "128": "src/icons/tie_128.png"
    },
    "permissions": ["tabs", "activeTab", "webNavigation", "storage"],
    "content_scripts": [
        {
            "matches": ["*://github.com/*"],
            "css": [],
            "js": ["src/index.js"]
        }
    ]
}
